<%- include('../../partials/head', { title: 'Eigenaar — Kliniek', req }) %>

<div class="flex items-start justify-between gap-6">
  <div>
    <h1 class="text-2xl font-semibold"><%= clinic.name %></h1>
    <p class="mt-1 text-slate-600">KvK: <%= clinic.kvkNumber %> — <%= clinic.address %></p>
  </div>
  <div class="flex gap-3">
    <a class="rounded-lg border px-4 py-2 hover:bg-slate-50" href="/owner/clinics">← Klinieken</a>
    <a class="rounded-lg bg-slate-900 px-4 py-2 text-white hover:bg-slate-800" href="/owner/clinics/<%= clinic.id %>/edit">Bewerken</a>
  </div>
</div>

<% if (message) { %>
  <div class="mt-4 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800"><%= message %></div>
<% } %>
<% if (error) { %>
  <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700"><%= error %></div>
<% } %>

<div class="mt-6 grid gap-6 lg:grid-cols-3">
  <section class="lg:col-span-1 rounded-2xl border bg-white p-5 shadow-sm">
    <h2 class="text-lg font-semibold">Contact</h2>
    <dl class="mt-3 space-y-2 text-sm">
      <div>
        <dt class="text-slate-500">Contactpersoon</dt>
        <dd><%= clinic.contactName %></dd>
      </div>
      <div>
        <dt class="text-slate-500">E-mail</dt>
        <dd><%= clinic.contactEmail %></dd>
      </div>
      <% if (clinic.contactPhone) { %>
        <div>
          <dt class="text-slate-500">Telefoon</dt>
          <dd><%= clinic.contactPhone %></dd>
        </div>
      <% } %>
    </dl>

    <h3 class="mt-6 text-sm font-semibold text-slate-700">Client login</h3>
    <p class="mt-1 text-sm text-slate-600">Maak een portaal-login voor deze kliniek.</p>
    <form method="post" action="/owner/clinics/<%= clinic.id %>/create-login" class="mt-3 space-y-2">
      <input class="w-full rounded-lg border px-3 py-2 text-sm" name="email" type="email" placeholder="client@kliniek.nl" required />
      <input class="w-full rounded-lg border px-3 py-2 text-sm" name="password" type="text" placeholder="Wachtwoord (leeg = auto)" />
      <button class="w-full rounded-lg bg-slate-900 px-4 py-2 text-white hover:bg-slate-800 text-sm">Login aanmaken</button>
    </form>

    <% if (clinic.users && clinic.users.length) { %>
      <div class="mt-4 rounded-xl border bg-slate-50 p-3 text-sm">
        <div class="text-xs text-slate-500">Bestaande logins</div>
        <ul class="mt-2 space-y-1">
          <% clinic.users.forEach((u) => { %>
            <li class="flex items-center justify-between">
              <span><%= u.email %></span>
              <span class="text-xs text-slate-500"><%= u.isActive ? 'actief' : 'inactief' %></span>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  </section>

  <section class="lg:col-span-2 rounded-2xl border bg-white p-5 shadow-sm">
    <h2 class="text-lg font-semibold">Trajecten</h2>
    <p class="mt-1 text-sm text-slate-600">Kandidaten gekoppeld aan deze kliniek (fase + planning).</p>

    <div class="mt-4 space-y-3">
      <% if (!clinic.journeys.length) { %>
        <div class="rounded-xl border bg-slate-50 p-4 text-sm text-slate-600">Nog geen trajecten.</div>
      <% } %>
      <% clinic.journeys.forEach((j) => { %>
        <div class="rounded-xl border p-4">
          <div class="flex items-start justify-between gap-4">
            <div>
              <div class="font-semibold">
                <a class="underline" href="/owner/candidates/<%= j.candidate.id %>"><%= j.candidate.firstName %> <%= j.candidate.lastName %></a>
              </div>
              <div class="mt-1 text-sm text-slate-600">
                Fase: <span class="font-medium"><%= stageLabelNl(j.stage) %></span>
                <% if (j.scheduledAt) { %>
                  — gepland: <%= new Date(j.scheduledAt).toLocaleString('nl-NL') %>
                <% } %>
              </div>
              <% if (j.notes) { %>
                <div class="mt-2 text-sm text-slate-700"><%= j.notes %></div>
              <% } %>
            </div>
            <a class="text-sm underline" href="/owner/journeys#j-<%= j.id %>">Beheer</a>
          </div>
        </div>
      <% }) %>
    </div>

    <h3 class="mt-6 text-sm font-semibold text-slate-700">Nieuw traject koppelen</h3>
    <form method="post" action="/owner/journeys/new" class="mt-3 grid gap-3 lg:grid-cols-4">
      <input type="hidden" name="clinicId" value="<%= clinic.id %>" />
      <div class="lg:col-span-2">
        <label class="block text-xs text-slate-500">Kandidaat</label>
        <select name="candidateId" class="mt-1 w-full rounded-lg border px-3 py-2 text-sm" required>
          <option value="">Selecteer kandidaat…</option>
          <% candidates.forEach((c) => { %>
            <option value="<%= c.id %>"><%= c.firstName %> <%= c.lastName %> — <%= c.email %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label class="block text-xs text-slate-500">Fase</label>
        <select name="stage" class="mt-1 w-full rounded-lg border px-3 py-2 text-sm" required>
          <option value="FIRST_INTERVIEW">1e gesprek</option>
          <option value="TRIAL_DAY">Meeloopdag</option>
          <option value="FINAL_OFFER">Laatste aanbod</option>
          <option value="PLACED">Geplaatst</option>
          <option value="REJECTED">Afgewezen</option>
          <option value="WITHDRAWN">Teruggetrokken</option>
        </select>
      </div>
      <div>
        <label class="block text-xs text-slate-500">Gepland (optioneel)</label>
        <input name="scheduledAt" type="datetime-local" class="mt-1 w-full rounded-lg border px-3 py-2 text-sm" />
      </div>
      <div class="lg:col-span-4">
        <label class="block text-xs text-slate-500">Notities (optioneel)</label>
        <input name="notes" class="mt-1 w-full rounded-lg border px-3 py-2 text-sm" />
      </div>
      <div class="lg:col-span-4">
        <button class="rounded-lg bg-slate-900 px-4 py-2 text-white hover:bg-slate-800 text-sm">Traject aanmaken</button>
      </div>
    </form>
  </section>
</div>

<section class="mt-6 rounded-2xl border bg-white p-5 shadow-sm">
  <h2 class="text-lg font-semibold">Documenten</h2>
  <p class="mt-1 text-sm text-slate-600">Upload overeenkomsten/contracten en mail ze direct naar de kliniek.</p>

  <form method="post" action="/owner/clinics/<%= clinic.id %>/documents" enctype="multipart/form-data" class="mt-4 flex flex-col gap-3 lg:flex-row lg:items-end">
    <div class="flex-1">
      <label class="block text-sm font-medium">Bestand</label>
      <input type="file" name="file" class="mt-1 w-full text-sm" required />
    </div>
    <button class="rounded-lg bg-slate-900 px-4 py-2 text-white hover:bg-slate-800 text-sm">Upload</button>
  </form>

  <div class="mt-4 space-y-2 text-sm">
    <% if (!clinic.documents.length) { %>
      <div class="rounded-xl border bg-slate-50 p-4 text-slate-600">Nog geen documenten.</div>
    <% } %>
    <% clinic.documents.forEach((d) => { %>
      <div class="flex flex-col gap-3 rounded-xl border p-3 lg:flex-row lg:items-center lg:justify-between">
        <div>
          <div class="font-medium"><%= d.originalName %></div>
          <div class="text-xs text-slate-500"><%= new Date(d.createdAt).toLocaleString('nl-NL') %></div>
        </div>
        <div class="flex gap-2">
          <a class="rounded-lg border px-3 py-1.5 hover:bg-slate-50" href="/files/clinic/<%= d.id %>" target="_blank" rel="noreferrer">Open</a>
          <form method="post" action="/owner/clinics/<%= clinic.id %>/documents/<%= d.id %>/email">
            <button class="rounded-lg bg-slate-900 px-3 py-1.5 text-white hover:bg-slate-800">Mail naar kliniek</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<%- include('../../partials/foot') %>

