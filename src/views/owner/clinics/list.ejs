<%- include('../../partials/head', { title: 'Eigenaar — Klinieken', req }) %>

<div class="flex items-start justify-between gap-6">
  <div>
    <h1 class="text-2xl font-semibold">Klinieken</h1>
    <p class="mt-1 text-slate-600">Beheer kliniekprofielen, documenten en logins.</p>
  </div>
  <a class="rounded-lg bg-slate-900 px-4 py-2 text-white hover:bg-slate-800" href="/owner/clinics/new">+ Nieuwe kliniek</a>
</div>

<div class="mt-6 rounded-2xl border bg-white shadow-sm overflow-hidden">
  <table class="w-full text-sm">
    <thead class="bg-slate-50 text-slate-600">
      <tr>
        <th class="text-left font-medium px-4 py-3">Naam</th>
        <th class="text-left font-medium px-4 py-3">KvK</th>
        <th class="text-left font-medium px-4 py-3">Contact</th>
        <th class="text-left font-medium px-4 py-3"></th>
      </tr>
    </thead>
    <tbody>
      <% if (!clinics.length) { %>
        <tr><td class="px-4 py-6 text-slate-600" colspan="4">Nog geen klinieken.</td></tr>
      <% } %>
      <% clinics.forEach((c) => { %>
        <tr class="border-t">
          <td class="px-4 py-3 font-medium"><%= c.name %></td>
          <td class="px-4 py-3"><%= c.kvkNumber %></td>
          <td class="px-4 py-3"><%= c.contactName %> — <%= c.contactEmail %></td>
          <td class="px-4 py-3 text-right">
            <a class="underline" href="/owner/clinics/<%= c.id %>">Open</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../../partials/foot') %>

