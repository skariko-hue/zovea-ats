<%- include('../partials/head', { title: 'Kliniek portal — Overzicht', req }) %>

<h1 class="text-2xl font-semibold">Kliniek portal</h1>
<p class="mt-1 text-slate-600">Inzicht in kandidaten, trajectupdates en documenten.</p>

<div class="mt-6 grid gap-6 lg:grid-cols-3">
  <section class="lg:col-span-1 rounded-2xl border bg-white p-5 shadow-sm">
    <h2 class="text-lg font-semibold">Profiel</h2>
    <dl class="mt-3 space-y-2 text-sm">
      <div>
        <dt class="text-slate-500">Kliniek</dt>
        <dd class="font-medium"><%= clinic.name %></dd>
      </div>
      <div>
        <dt class="text-slate-500">Adres</dt>
        <dd><%= clinic.address %></dd>
      </div>
      <div>
        <dt class="text-slate-500">KvK</dt>
        <dd><%= clinic.kvkNumber %></dd>
      </div>
      <div>
        <dt class="text-slate-500">Contactpersoon</dt>
        <dd><%= clinic.contactName %> — <%= clinic.contactEmail %></dd>
      </div>
      <% if (clinic.contactPhone) { %>
        <div>
          <dt class="text-slate-500">Telefoon</dt>
          <dd><%= clinic.contactPhone %></dd>
        </div>
      <% } %>
    </dl>
  </section>

  <section class="lg:col-span-2 rounded-2xl border bg-white p-5 shadow-sm">
    <h2 class="text-lg font-semibold">Trajecten (kandidaten)</h2>
    <p class="mt-1 text-sm text-slate-600">
      Kandidaten verschijnen hier zodra ze door Zovea gekoppeld zijn.
    </p>

    <div class="mt-4 space-y-3">
      <% if (!clinic.journeys.length) { %>
        <div class="rounded-xl border bg-slate-50 p-4 text-sm text-slate-600">Nog geen trajecten.</div>
      <% } %>
      <% clinic.journeys.forEach((j) => { %>
        <div class="rounded-xl border p-4">
          <div class="flex items-start justify-between gap-4">
            <div>
              <div class="font-semibold"><%= j.candidate.firstName %> <%= j.candidate.lastName %></div>
              <div class="mt-1 text-sm text-slate-600">
                Fase: <span class="font-medium"><%= j.stage %></span>
                <% if (j.scheduledAt) { %>
                  — gepland: <%= new Date(j.scheduledAt).toLocaleString('nl-NL') %>
                <% } %>
              </div>
              <div class="mt-1 text-sm text-slate-600">
                Beschikbaarheid: <%= j.candidate.availability || 'Niet ingevuld' %>
              </div>
            </div>
            <div class="text-right text-sm text-slate-500">
              <div>Locatie: <span class="text-slate-700"><%= j.candidate.location %></span></div>
              <div>Tarief: <span class="text-slate-700"><%= j.candidate.salaryRate %></span></div>
            </div>
          </div>

          <div class="mt-3 grid gap-3 lg:grid-cols-2">
            <div class="rounded-xl bg-slate-50 p-3 text-sm">
              <div class="text-xs text-slate-500">Wensen</div>
              <div class="mt-1 text-slate-800"><%= j.candidate.jobWishes %></div>
            </div>
            <div class="rounded-xl bg-slate-50 p-3 text-sm">
              <div class="text-xs text-slate-500">CV</div>
              <% const cv = (j.candidate.documents && j.candidate.documents[0]) ? j.candidate.documents[0] : null; %>
              <% if (cv) { %>
                <a class="mt-1 inline-block text-slate-900 underline" href="<%= cv.storagePath %>" target="_blank" rel="noreferrer">
                  <%= cv.originalName %>
                </a>
              <% } else { %>
                <div class="mt-1 text-slate-600">Nog geen CV beschikbaar.</div>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
</div>

<section class="mt-6 rounded-2xl border bg-white p-5 shadow-sm">
  <h2 class="text-lg font-semibold">Documenten (overeenkomsten / contracten)</h2>
  <div class="mt-4 space-y-2 text-sm">
    <% if (!clinic.documents.length) { %>
      <div class="rounded-xl border bg-slate-50 p-4 text-slate-600">Nog geen documenten.</div>
    <% } %>
    <% clinic.documents.forEach((d) => { %>
      <div class="flex items-center justify-between gap-4 rounded-xl border p-3">
        <div>
          <div class="font-medium"><%= d.originalName %></div>
          <div class="text-xs text-slate-500"><%= new Date(d.createdAt).toLocaleString('nl-NL') %></div>
        </div>
        <a class="rounded-lg bg-slate-900 px-3 py-1.5 text-white hover:bg-slate-800" href="<%= d.storagePath %>" target="_blank" rel="noreferrer">
          Open
        </a>
      </div>
    <% }) %>
  </div>
</section>

<%- include('../partials/foot') %>

